pipeline {
    agent any 

        environment {
            MY_ENV_VAR='Hello World'
        }
    

    stages {
        stage('Checkout') {
            steps {
                    script {
                        //Clone the git repository
                        def gitRepoUrl = 'https://github.com/stefan-claudiu/training-devops.git'

                        checkout([$class: 'GitSCM', 
                        branches: [[name: '*/main']], 
                        userRemoteConfigs: [[url: gitRepoUrl]], 
                        extensions: [[$class: 'CleanBeforeCheckout'], [$class: 'CloneOption', noTags: false, shallow: true, depth: 1]]
                        ])
                    }
            }
        }

        stage('Build') {
            environment {
                LOG_INFO='Logging into the BUILD Stage'
            }
            steps {
                sh '''
                    ls
                    echo "In Build Step"
                    echo "What are you doing? ${LOG_INFO}"
                '''
            }
        }

        stage('Test') {
            steps {
                sh 'echo "In Test Step"'
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Value of the ENV Variable is ${MY_ENV_VAR}"'
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}